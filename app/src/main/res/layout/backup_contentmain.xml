<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.expose.safa.MainActivity"
    tools:showIn="@layout/app_bar_main"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Container_for_Fragments"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#fff"
                        android:layout_below="@+id/r_layout_img_home">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_weight="1"
                            android:background="#ababab"
                            android:weightSum="2"

                            android:orientation="horizontal">

                            <LinearLayout

                                android:id="@+id/layout_aboutUs"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="#fff"
                                android:gravity="center"
                                android:padding="5dp"

                                android:layout_marginRight="1dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_about_us"
                                    android:layout_marginBottom="5dp"



                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="About US"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout

                                android:id="@+id/layout_products"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="#fff"
                                android:gravity="center"

                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_products"
                                    android:layout_marginBottom="5dp"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Products"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>



                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/r_layout_img_home"

                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/safa"
                                android:foregroundGravity="center"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                />
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:background="#ababab"
                            android:paddingTop="1dp"
                            android:orientation="horizontal">


                            <LinearLayout

                                android:id="@+id/layout_Contact_us"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="#fff"
                                android:gravity="center"
                                android:padding="5dp"
                                android:layout_marginRight="1dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:src="@drawable/ic_contactus"
                                    android:layout_marginBottom="5dp"

                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Contact Us"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                            <LinearLayout

                                android:id="@+id/layout_enquiry"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="#fff"
                                android:gravity="center"
                                android:padding="5dp"
                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_enquiry"
                                    android:layout_marginBottom="5dp"

                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Enquiry"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:gravity="center"/>

                            </LinearLayout>


                        </LinearLayout>




                    </LinearLayout>





                </LinearLayout>



            </ScrollView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="#000"
            android:weightSum="3"


            >

            <LinearLayout

                android:id="@+id/layout_facebook"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0d0d0d"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="2dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_facebook"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/layout_call"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:orientation="vertical"
                android:layout_marginRight="2dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_call"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_website"

                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#141414"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:clickable="true"
                android:layout_marginRight="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_web"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginTop="2dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>




