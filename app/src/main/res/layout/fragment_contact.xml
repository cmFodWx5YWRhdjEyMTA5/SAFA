<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:background="@drawable/safa_background_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Container_for_Fragments"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:layout_margin="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Connect with us"
                        android:gravity="center_vertical"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="For support or any questions :"
                        android:gravity="center_vertical"
                        android:textSize="19sp"
                        android:textColor="#f3ecec"
                        android:layout_marginBottom="5dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="25dp"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email us at"
                            android:gravity="center_vertical"
                            android:textSize="19sp"
                            android:textColor="#f3ecec"

                            android:layout_marginBottom="5dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="  support@safa.com"
                            android:textSize="19sp"
                            android:textColor="#007f93"
                            android:layout_marginBottom="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="25dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Safa USA"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="19sp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="501 Silverside Road,suite 105,wilmigton,Delaware 19809-USA"
                            android:textColor="#f3ecec"
                            android:textSize="19sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Safa India"
                            android:textColor="#fff"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="B-222,First Floor"
                            android:layout_marginBottom="5dp"
                            android:textColor="#f3ecec"
                            android:textSize="19sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Okhla-Industrial Area,Phase-1"
                            android:layout_marginBottom="5dp"
                            android:textColor="#f3ecec"
                            android:textSize="19sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Delhi IN - 110020"
                            android:layout_marginBottom="5dp"
                            android:textColor="#f3ecec"
                            android:textSize="19sp"/>

                    </LinearLayout>

                </LinearLayout>








            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>